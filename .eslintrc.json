{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"ignorePatterns": ["node_modules", "*example.js"],
	"overrides": [
		{
			"files": ["test/**"],
			"rules": {
				"no-unused-vars": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"root": true,
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": false
			}
		]
	}
}
